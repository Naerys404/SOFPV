{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ title }}{% endblock %}

{% block body %}
 
    <section class="order">
     {{include('partials/_navbarMenu.html.twig')}}
        <div class="container-fluid bg-light pt-4">
              <div class="col stripeDiv">
                     <div class="text-center"> 
                        <a href="https://stripe.com/fr" class="poweredByStripe" target="_blank">
                                <img src="https://cdn.brandfolder.io/KGT2DTA4/at/rvgw5pc69nhv9wkh7rw8ckv/Powered_by_Stripe_-_blurple.png?width=132&height=30" alt="paiement sécurisé par Stripe">
                        </a>
                    </div>
                    
                        <div class="card-body">

                            <form action="{{path('subscription_payment', {'id': cart.reference})}}" method="POST" id="payment-form">
                                <div class="form-row">
                                    <div id="card-elements"></div>

                                    <script src="https://js.stripe.com/v3"></script>

                                    <div id="card-errors" role="alert"></div>

                                </div>
                                <div class="text-center">
                                    <button class="btn mt-4">Payer  &euro;
                                </button>
                                </div>
                            </form>
                        
                        </div>
                    </div>
                </div>
                    <div class='d-flex justify-content-end'>
                   <a href="{{path('home')}}" class="btn btn-dark m-1">Annuler</a>
                   </div>
        </div>
    </section>

{% endblock %}

