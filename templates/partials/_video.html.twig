    
    {% if video.isUploaded %}
    <video id="player" playsinline controls data-poster="{{asset('uploads/article/video/thumb/' ~ video.thumbnail )}}" data-plyr-config='{ "title":"{{video.title|raw}}"}'>
        <source src="{{asset('uploads/article/video/' ~ video.source )}}" type="video/mp4" />
    </video>
    {% else %}
    <div class="ytPlayer">
        <iframe height="315" width="560" src="{{video.source}}" title="YouTube video player" frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    {% endif %}


