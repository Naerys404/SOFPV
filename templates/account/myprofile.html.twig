{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ title }}{% endblock %}

{% block body %}
 
    <section id="myProfile" class="bg-dark">
        {{include('partials/_navbarMenu.html.twig')}}
    
        <div class="container-fluid ">
        {# sidebar #}
        {{include('partials/_sidebarMenuProfile.html.twig')}}

        <div class="wrap">   
        {# banner #} 
                <div class="banner">
                {% if user.banner is not null %}       
                    <img src="{{asset('/uploads/banner/'~ user.banner)}}" alt="banniere"/>       
                {% else %}  
                    <img src="{{asset('/img/NazgulFrame.jpg')}}" alt="banniere"/> 
                {% endif %}
                </div>
               <div class="row">

                <div class="col-4">

                    <div class="user">
                        <div id="myProfile-avatar">
                            {% if user.avatar is not null %}
                                <img src="{{asset('/uploads/avatar/'~ user.avatar)}}" alt="avatar" class="img-fluid"/>
                            {% else %}
                                <img src="{{asset('/img/avatar-1.png')}}" alt="avatar" class="img-fluid"/>
                            {% endif %}  
                                             
                        </div>
                        <h2>{{user.nickname}}</h2> 
                    </div>
                    <div class="personnal-info">
        
                        <h3>Mes informations</h3>
                        <hr>
                        <b>Email: </b>{{user.email}}<br>
                        <b>Nom: </b>{{user.firstname}} {{user.lastname}}<br>
                                        
                        <b>Adresse:</b><br> {{user.address}}
                            {% if user.addressComplement %}
                                <br>{{user.addressComplement}}
                            {% endif %}
                                <br>{{user.zip}}, {{user.city}}
                        </p>
                                
                        <div class="param">
                            <a href="{{path('account_edit')}}" class="btn"><i class="fa-solid fa-user-gear"></i> Modifier mon profil</a>
                        </div>
                    </div>

                    <div class="my-drone">
                    <h3>Ma config</h3>
                    <hr>
                    {% for drone in drones %}
                        <b>Frame: </b>{{drone.frame}}<br>
                        <b>Moteurs: </b>{{drone.motors}}<br>
                        <b>FC: </b>{{drone.fc}}<br>
                        <b>ESC: </b>{{drone.esc}}<br>
                        <b>CAM: </b>{{drone.cam}}<br>
                        <b>RÃ©ception: </b>{{drone.reception}}<br>
                        <b>Type de lipo: </b>{{drone.lipoCells}}S

                        {% if drone.image is not null %}
                                <img src="{{asset('/uploads/drone/'~ drone.image)}}" alt="drone" class="img-fluid"/>
                            {% else %}
                                <img src="{{asset('/img/avatar.png')}}" alt="drone" class="img-fluid"/>
                        {% endif %} 
                    {% endfor %}

                    </div>
               </div>
                
